<h1>Events Page</h1>

<table>
    <thead>
        <tr>
            <td>ID</td>
            <td>Title</td>
            <td>Price</td>
            <td>Description</td>
            <td>Action</td>
        </tr>
    </thead>
    <% if(events.length>0){ %>
        <tbody>
            <% for(let event of events){ %>
                <tr>
                    <td><%= event._id %></td>
                    <td><%= event.title %></td>
                    <td><%= event.price %></td>
                    <td><%= event.description %></td>
                    <td>
                        <a href="/events/<%= event._id %>">Show</a>
                        <a href="/edit/<%= event._id  %>">Edit</a>
                        <a href="/events/<%= event._id %>/delete">Delete</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
        <% } %>
</table>